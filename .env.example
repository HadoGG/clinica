FRONTEND_PORT=3000
FRONTEND_SSL_PORT=443

# ================================================
# Prometheus & Monitoring
# ================================================
PROMETHEUS_ENABLED=True
PROMETHEUS_PORT=9090
GRAFANA_PASSWORD=Inacap2025&

# ================================================
# Backup Configuration
